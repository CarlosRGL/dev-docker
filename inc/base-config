# config default values
DEVDOCKER_VM="devdockervm"
DEVDOCKER_REPOSITORY="quai2.quai13.com:5000"
DEVDOCKER_IMAGE="$DEVDOCKER_REPOSITORY/devdocker"
DEVDOCKER_AUTOUPDATE="1"
DOCKERSITE_ROOT="$HOME/dev-docker/dockersite"
SSH_DIR="$HOME/.ssh"
SSH_PUBKEY="$SSH_DIR/id_rsa.pub"
MYSQL_FORCED_ROOT_PASSWORD="$(openssl rand -base64 32 | cut -c1-16)"
DOCKERMACHINE="$(which docker-machine 2>/dev/null)"
SSH_CMD="ssh -q -p 8022 -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o ControlMaster=yes root@127.0.0.1 -L 80:127.0.0.1:80 -L 443:127.0.0.1:443 -L 3306:127.0.0.1:3306"
SSH_PORT_FW_CMD="$SSH_CMD -L 80:127.0.0.1:80 -L 443:127.0.0.1:443 -L 3306:127.0.0.1:3306"
